<Page
    x:Class="UI.Pages.Forms.CreateNewLeagueSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Pages.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CreateNewLeagueSettingsPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <!--  Form  -->
    <StackPanel
        Width="300"
        VerticalAlignment="Center"
        Orientation="Vertical">

        <!--  First Name  -->
        <StackPanel
            Margin="5"
            HorizontalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="Setting Name" />

            <Border
                Width="250"
                Height="50"
                Margin="15,0"
                BorderBrush="{StaticResource Dark Gray}"
                BorderThickness="2"
                CornerRadius="5">
                <TextBox
                    x:Name="SettingNameTextBox"
                    Height="50"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="{StaticResource Background}"
                    BorderThickness="0"
                    FontSize="18"
                    Foreground="{StaticResource Foreground}" />
            </Border>
        </StackPanel>

        <!--  Play Date  -->
        <StackPanel
            Margin="5"
            HorizontalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="Date of Play" />


            <ComboBox
                x:Name="DayOfWeekComboBox"
                Width="250"
                Margin="10"
                FontSize="20"
                ItemContainerStyle="{StaticResource DayComboBoxItemStyle}"
                SelectedIndex="0"
                Style="{StaticResource DayComboBoxStyle}" />

        </StackPanel>



        <!--  Scoring Rule  -->
        <StackPanel
            Margin="5"
            HorizontalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="Scoring Rule" />

            <ComboBox
                x:Name="ScoringRuleComboBox"
                Width="250"
                Margin="10"
                FontSize="20"
                ItemContainerStyle="{StaticResource DayComboBoxItemStyle}"
                Style="{StaticResource DayComboBoxStyle}" />
        </StackPanel>

        <!--  Team Size  -->
        <StackPanel
            Margin="5"
            HorizontalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="Team Size" />

            <Border
                Width="250"
                Height="50"
                Margin="15,0"
                BorderBrush="{StaticResource Dark Gray}"
                BorderThickness="2"
                CornerRadius="5">
                <TextBox
                    x:Name="TeamSizeTextBox"
                    Height="50"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="{StaticResource Background}"
                    BorderThickness="0"
                    FontSize="18"
                    Foreground="{StaticResource Foreground}" />
            </Border>
        </StackPanel>

        <!--  Error Message  -->
        <TextBlock
            x:Name="ErrorMessageTextBlock"
            Margin="5"
            HorizontalAlignment="Center"
            FontSize="16"
            FontWeight="SemiBold"
            Foreground="Red"
            TextAlignment="Center"
            TextWrapping="WrapWithOverflow"
            Visibility="Collapsed" />

        <StackPanel
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">

            <!--  Delete Button  -->
            <Button
                x:Name="DeleteButton"
                Margin="15"
                HorizontalAlignment="Left"
                Click="DeleteButton_Click"
                Content="Delete"
                Style="{StaticResource SaveExitButtonStyle}"
                Visibility="Hidden" />


            <!--  Save Button  -->
            <Button
                x:Name="SaveButton"
                Margin="15"
                HorizontalAlignment="Right"
                Click="SaveButton_Click"
                Content="Save"
                Style="{StaticResource SaveExitButtonStyle}" />
        </StackPanel>

    </StackPanel>

</Page>
