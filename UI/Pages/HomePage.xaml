<Page
    x:Class="UI.Pages.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HomePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="{StaticResource Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            FontFamily="Arial Black"
            FontSize="96"
            FontWeight="SemiBold"
            Foreground="{StaticResource Foreground}"
            Text="Golf League Scorebook" />

        <!--  Navigation  -->
        <StackPanel
            x:Name="NavigationPillsPanel"
            Grid.Row="1"
            Margin="0,50"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Orientation="Horizontal">

            <Button
                Name="LeagueButton"
                Margin="25"
                Click="LeagueButton_Click"
                Style="{StaticResource CreateLeagueMatchupsButtonStyle}">
                <TextBlock
                    FontSize="28"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource Foreground}"
                    Text="Leagues"
                    TextAlignment="Center"
                    TextWrapping="WrapWithOverflow" />
            </Button>

            <Button
                Name="TeamButton"
                Margin="25"
                Click="TeamButton_Click"
                Style="{StaticResource CreateLeagueMatchupsButtonStyle}">
                <TextBlock
                    FontSize="28"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource Foreground}"
                    Text="Teams"
                    TextAlignment="Center"
                    TextWrapping="WrapWithOverflow" />
            </Button>

            <Button
                Name="GolferButton"
                Margin="25"
                Click="GolferButton_Click"
                Style="{StaticResource CreateLeagueMatchupsButtonStyle}">
                <TextBlock
                    FontSize="28"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource Foreground}"
                    Text="Golfers"
                    TextAlignment="Center"
                    TextWrapping="WrapWithOverflow" />
            </Button>

            <Button
                Name="CoursesButton"
                Margin="25"
                Click="CoursesButton_Click"
                Style="{StaticResource CreateLeagueMatchupsButtonStyle}">
                <TextBlock
                    FontSize="28"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource Foreground}"
                    Text="Courses"
                    TextAlignment="Center"
                    TextWrapping="WrapWithOverflow" />
            </Button>

        </StackPanel>
    </Grid>
</Page>
