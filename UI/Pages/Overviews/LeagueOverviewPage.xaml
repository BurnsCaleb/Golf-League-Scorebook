<Page
    x:Class="UI.Pages.Overviews.LeagueOverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Pages.Overviews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LeagueOverviewPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Border
        Padding="15"
        Background="{StaticResource Background}"
        BorderBrush="{StaticResource Dark Gray}"
        BorderThickness="2"
        CornerRadius="10">
        <Grid Height="auto">
            <Grid.RowDefinitions>
                <RowDefinition Name="Header" Height="*" />
                <RowDefinition Name="LeaguePills" Height="4*" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <TextBlock
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Arial Black"
                FontSize="72"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="Leagues" />

            <!--  Leagues Pill Container  -->
            <WrapPanel
                Name="LeaguesPillStackPanel"
                Grid.Row="1"
                Margin="5"
                HorizontalAlignment="Left"
                Orientation="Horizontal" />

        </Grid>
    </Border>
</Page>
