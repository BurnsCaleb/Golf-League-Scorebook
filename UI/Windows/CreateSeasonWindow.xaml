<Window
    x:Class="UI.Windows.CreateSeasonWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Create New Season"
    Width="400"
    Height="300"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">

    <Grid Background="{StaticResource Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Title  -->
        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="24"
            FontWeight="Bold"
            Foreground="{StaticResource Foreground}"
            Text="Enter Season Name"
            TextAlignment="Center" />

        <!--  TextBox  -->
        <TextBox
            x:Name="SeasonNameTextBox"
            Grid.Row="1"
            Width="300"
            Height="40"
            Margin="20"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Background="{StaticResource Dark Gray}"
            BorderBrush="{StaticResource Accent}"
            BorderThickness="2"
            FontSize="18"
            Foreground="{StaticResource Foreground}" />

        <!--  Error Message  -->
        <TextBlock
            x:Name="ErrorMessageTextBlock"
            Margin="5"
            HorizontalAlignment="Center"
            FontSize="16"
            FontWeight="SemiBold"
            Foreground="Red"
            TextAlignment="Center"
            TextWrapping="WrapWithOverflow" />

        <!--  Buttons  -->
        <StackPanel
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="SaveButton"
                Width="120"
                Height="40"
                Margin="10"
                Background="{StaticResource Accent}"
                BorderThickness="0"
                Click="SaveButton_Click"
                Content="Save"
                FontSize="16"
                FontWeight="Bold"
                Foreground="{StaticResource Foreground}" />

            <Button
                x:Name="CancelButton"
                Width="120"
                Height="40"
                Margin="10"
                Background="{StaticResource Dark Gray}"
                BorderBrush="{StaticResource Accent}"
                BorderThickness="2"
                Click="CancelButton_Click"
                Content="Cancel"
                FontSize="16"
                FontWeight="Bold"
                Foreground="{StaticResource Foreground}" />
        </StackPanel>
    </Grid>
</Window>
