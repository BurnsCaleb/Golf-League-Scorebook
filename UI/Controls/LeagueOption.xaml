<UserControl
    x:Class="UI.Controls.LeagueOption"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Button
        Name="LeagueOptionButton"
        Click="LeagueOptionButton_Click"
        Style="{StaticResource LeagueOptionButtonStyle}"
        ToolTip="Select This Course">
        <StackPanel
            Margin="5"
            HorizontalAlignment="Center"
            Orientation="Vertical">

            <TextBlock
                Margin="0,5"
                FontSize="30"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="{Binding LeagueName}" />

            <TextBlock
                Margin="0,5"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="{Binding NumPlayers}" />
        </StackPanel>
    </Button>
</UserControl>
