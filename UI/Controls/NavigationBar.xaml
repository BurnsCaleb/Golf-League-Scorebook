<UserControl
    x:Class="UI.Controls.NavigationBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <Storyboard x:Key="ExpandAnimation">
            <DoubleAnimation
                Storyboard.TargetName="NavBarBorder"
                Storyboard.TargetProperty="Width"
                To="250"
                Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <Storyboard x:Key="CollapseAnimation">
            <DoubleAnimation
                Storyboard.TargetName="NavBarBorder"
                Storyboard.TargetProperty="Width"
                To="60"
                Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
    </UserControl.Resources>
    <Border
        x:Name="NavBarBorder"
        Width="60"
        Background="{StaticResource Background}"
        BorderBrush="{StaticResource Accent}"
        BorderThickness="0,0,1,0"
        KeyboardNavigation.TabNavigation="None">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Toggle Button  -->
            <Button
                x:Name="ToggleButton"
                Grid.Row="0"
                Click="ToggleButton_Click"
                Style="{StaticResource NavButtonStyle}"
                ToolTip="Toggle Navigation">
                <Grid>
                    <TextBlock
                        x:Name="HamburgerIcon"
                        Style="{StaticResource NavIconStyle}"
                        Text="&#xE700;"
                        Visibility="Visible" />
                    <StackPanel
                        x:Name="ExpandedToggle"
                        Orientation="Horizontal"
                        Visibility="Collapsed">
                        <TextBlock
                            Margin="0,0,10,0"
                            Style="{StaticResource NavIconStyle}"
                            Text="&#xE711;" />
                        <TextBlock FontSize="14" Text="Collapse" />
                    </StackPanel>
                </Grid>
            </Button>

            <!--  Navigation Items  -->
            <StackPanel Grid.Row="1" Margin="0,10,0,0">

                <!--  Home Button  -->
                <Button
                    x:Name="HomeButton"
                    Click="HomeButton_Click"
                    Style="{StaticResource NavButtonStyle}"
                    ToolTip="Home">
                    <Grid>
                        <TextBlock
                            x:Name="HomeIcon"
                            Style="{StaticResource NavIconStyle}"
                            Text="&#xE80F;"
                            Visibility="Visible" />
                        <StackPanel
                            x:Name="HomeExpanded"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                            <TextBlock
                                Margin="0,0,10,0"
                                Style="{StaticResource NavIconStyle}"
                                Text="&#xE80F;" />
                            <TextBlock FontSize="14" Text="Home" />
                        </StackPanel>
                    </Grid>
                </Button>

                <!--  Leagues Button  -->
                <Button
                    x:Name="LeaguesButton"
                    Click="LeaguesButton_Click"
                    Style="{StaticResource NavButtonStyle}"
                    ToolTip="Leagues">
                    <Grid>
                        <TextBlock
                            x:Name="LeaguesIcon"
                            Style="{StaticResource NavIconStyle}"
                            Text="&#xEDB3;"
                            Visibility="Visible" />
                        <StackPanel
                            x:Name="LeaguesExpanded"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                            <TextBlock
                                Margin="0,0,10,0"
                                Style="{StaticResource NavIconStyle}"
                                Text="&#xEDB3;" />
                            <TextBlock FontSize="14" Text="Leagues" />
                        </StackPanel>
                    </Grid>
                </Button>

                <!--  Players Button  -->
                <Button
                    x:Name="PlayersButton"
                    Click="PlayersButton_Click"
                    Style="{StaticResource NavButtonStyle}"
                    ToolTip="Players">
                    <Grid>
                        <TextBlock
                            x:Name="PlayersIcon"
                            Style="{StaticResource NavIconStyle}"
                            Text="&#xE13D;"
                            Visibility="Visible" />
                        <StackPanel
                            x:Name="PlayersExpanded"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                            <TextBlock
                                Margin="0,0,10,0"
                                Style="{StaticResource NavIconStyle}"
                                Text="&#xE13D;" />
                            <TextBlock FontSize="14" Text="Golfers" />
                        </StackPanel>
                    </Grid>
                </Button>

                <!--  Teams Button  -->
                <Button
                    x:Name="TeamsButton"
                    Click="TeamsButton_Click"
                    Style="{StaticResource NavButtonStyle}"
                    ToolTip="Teams">
                    <Grid>
                        <TextBlock
                            x:Name="TeamsIcon"
                            Style="{StaticResource NavIconStyle}"
                            Text="&#xE716;"
                            Visibility="Visible" />
                        <StackPanel
                            x:Name="TeamsExpanded"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                            <TextBlock
                                Margin="0,0,10,0"
                                Style="{StaticResource NavIconStyle}"
                                Text="&#xE716;" />
                            <TextBlock FontSize="14" Text="Teams" />
                        </StackPanel>
                    </Grid>
                </Button>


                <!--  Courses Button  -->
                <Button
                    x:Name="CoursesButton"
                    Click="CoursesButton_Click"
                    Style="{StaticResource NavButtonStyle}"
                    ToolTip="Courses">
                    <Grid>
                        <TextBlock
                            x:Name="CoursesIcon"
                            Style="{StaticResource NavIconStyle}"
                            Text="&#xE7C1;"
                            Visibility="Visible" />
                        <StackPanel
                            x:Name="CoursesExpanded"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                            <TextBlock
                                Margin="0,0,10,0"
                                Style="{StaticResource NavIconStyle}"
                                Text="&#xE7C1;" />
                            <TextBlock FontSize="14" Text="Courses" />
                        </StackPanel>
                    </Grid>
                </Button>

                <!--  Settings Button  -->
                <Button
                    x:Name="SettingsButton"
                    Click="SettingsButton_Click"
                    Style="{StaticResource NavButtonStyle}"
                    ToolTip="Settings">
                    <Grid>
                        <TextBlock
                            x:Name="SettingsIcon"
                            Style="{StaticResource NavIconStyle}"
                            Text="&#xE713;"
                            Visibility="Visible" />
                        <StackPanel
                            x:Name="SettingsExpanded"
                            Orientation="Horizontal"
                            Visibility="Collapsed">
                            <TextBlock
                                Margin="0,0,10,0"
                                Style="{StaticResource NavIconStyle}"
                                Text="&#xE713;" />
                            <TextBlock FontSize="14" Text="Settings" />
                        </StackPanel>
                    </Grid>
                </Button>

            </StackPanel>

            <!--  Bottom Items  -->
            <StackPanel Grid.Row="2" VerticalAlignment="Bottom" />
        </Grid>
    </Border>
</UserControl>
