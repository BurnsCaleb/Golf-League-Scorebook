<Page
    x:Class="UI.Pages.InfoPages.LeagueInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Pages.InfoPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="LeagueInfoPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Header" Height="auto" />
            <RowDefinition x:Name="Info" Height="auto" />
            <RowDefinition x:Name="Data" Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Left">
            <TextBlock
                x:Name="HeaderTextBlock"
                HorizontalAlignment="Right"
                FontSize="52"
                FontWeight="Bold"
                Foreground="{StaticResource Foreground}" />
        </StackPanel>

        <!--  Save and Delete Buttons  CURRENTLY HIDDEN  -->
        <StackPanel
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Visibility="Collapsed">
            <Button
                x:Name="DeleteButton"
                Margin="0,0,25,0"
                HorizontalAlignment="Right"
                Click="DeleteButton_Click"
                Content="Delete"
                Style="{StaticResource SaveExitButtonStyle}" />
            <Button
                x:Name="EndSeasonButton"
                Margin="0,0,25,0"
                HorizontalAlignment="Right"
                Click="EndSeasonButton_Click"
                Content="End Season"
                Style="{StaticResource SaveExitButtonStyle}" />
        </StackPanel>

        <!--  Data Table Filters  -->
        <Border
            Grid.Row="1"
            Height="95"
            Margin="15"
            BorderBrush="{StaticResource Dark Gray}"
            BorderThickness="5"
            CornerRadius="10">

            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">

                <ComboBox
                    x:Name="WeekComboBox"
                    Width="350"
                    Margin="25,5"
                    FontSize="20"
                    ItemContainerStyle="{StaticResource DayComboBoxItemStyle}"
                    SelectionChanged="WeekComboBox_SelectionChanged"
                    Style="{StaticResource DayComboBoxStyle}" />

                <ComboBox
                    x:Name="SeasonComboBox"
                    Width="350"
                    Margin="25,5"
                    FontSize="20"
                    ItemContainerStyle="{StaticResource DayComboBoxItemStyle}"
                    SelectionChanged="SeasonComboBox_SelectionChanged"
                    Style="{StaticResource DayComboBoxStyle}" />

            </StackPanel>

        </Border>

        <!--  League Data  -->
        <Viewbox Grid.Row="2" Stretch="Uniform">
            <Border
    Grid.Row="2"
    Margin="15"
    BorderBrush="{StaticResource Dark Gray}"
    BorderThickness="5"
    CornerRadius="10">



                <StackPanel
        Margin="15"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Orientation="Vertical">

                    <!--  Enter Scores  -->
                    <Button
            Name="EnterScoresButton"
            Click="EnterScoresButton_Click"
            FontWeight="SemiBold"
            Style="{StaticResource CreateLeagueMatchupsButtonStyle}"
            Visibility="Collapsed">
                        <TextBlock
                Name="EnterScoresText"
                FontSize="28"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow" />
                    </Button>

                    <!--  Next Week  -->
                    <Button
            Name="NextWeekButton"
            Click="NextWeekButton_Click"
            FontWeight="SemiBold"
            Style="{StaticResource CreateLeagueMatchupsButtonStyle}"
            Visibility="Collapsed">
                        <TextBlock
                Name="NextWeekText"
                FontSize="28"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="Go To Next Week"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow" />
                    </Button>

                    <!--  Create New Season  -->
                    <Button
            Name="NewSeasonButton"
            Click="NewSeasonButton_Click"
            FontWeight="SemiBold"
            Style="{StaticResource CreateLeagueMatchupsButtonStyle}"
            Visibility="Collapsed">
                        <TextBlock
                FontSize="28"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="Create New Season"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow" />
                    </Button>

                    <!--  DataGrids  -->
                    <StackPanel
            Name="DataGridsStackPanel"
            Margin="5"
            HorizontalAlignment="Center"
            VerticalAlignment="top"
            Orientation="Horizontal"
            Visibility="Collapsed">

                        <DataGrid
                Name="GolferRoundsDataGrid"
                Height="450"
                Margin="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                AutoGenerateColumns="False"
                CellStyle="{StaticResource RoundsDataGridCellStyle}"
                ColumnHeaderStyle="{StaticResource RoundsDataGridColumnHeaderStyle}"
                RowStyle="{StaticResource RoundsDataGridRowStyle}"
                Style="{StaticResource RoundsDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding GolferName, Mode=OneWay}" Header="Golfer" />

                                <DataGridTextColumn Binding="{Binding MatchupName, Mode=OneWay}" Header="Matchup">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="MaxWidth" Value="300" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Binding="{Binding GrossScore, Mode=OneWay}" Header="Gross" />
                                <DataGridTextColumn Binding="{Binding NetScore, Mode=OneWay}" Header="Net" />
                                <DataGridTextColumn Binding="{Binding PointsAwarded, Mode=OneWay}" Header="Points" />
                            </DataGrid.Columns>
                        </DataGrid>


                        <DataGrid
                Name="TeamRoundsDataGrid"
                Height="450"
                Margin="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                AutoGenerateColumns="False"
                CellStyle="{StaticResource RoundsDataGridCellStyle}"
                ColumnHeaderStyle="{StaticResource RoundsDataGridColumnHeaderStyle}"
                RowStyle="{StaticResource RoundsDataGridRowStyle}"
                Style="{StaticResource RoundsDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding DatePlayed, Mode=OneWay}" Header="Date Played" />

                                <DataGridTextColumn Binding="{Binding TeamName, Mode=OneWay}" Header="Team">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="MaxWidth" Value="300" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Binding="{Binding MatchupName, Mode=OneWay}" Header="Matchup">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="MaxWidth" Value="300" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Binding="{Binding PointsAwarded, Mode=OneWay}" Header="Points" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <DataGrid
                Name="LeagueLeaderBoardDataGrid"
                Height="450"
                Margin="15"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                AutoGenerateColumns="False"
                CellStyle="{StaticResource RoundsDataGridCellStyle}"
                ColumnHeaderStyle="{StaticResource RoundsDataGridColumnHeaderStyle}"
                RowStyle="{StaticResource RoundsDataGridRowStyle}"
                Style="{StaticResource RoundsDataGridStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Binding="{Binding TeamName, Mode=OneWay}" Header="Team">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextWrapping" Value="Wrap" />
                                            <Setter Property="MaxWidth" Value="300" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>

                                <DataGridTextColumn Binding="{Binding TotalPoints, Mode=OneWay}" Header="Points" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!--  Matchup Pills  -->
                    <ScrollViewer
            x:Name="MatchupPillsScroller"
            Height="200"
            Margin="5"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Disabled"
            Visibility="Collapsed">

                        <StackPanel
                Name="MatchupPillPanel"
                CanHorizontallyScroll="True"
                Orientation="Horizontal" />

                    </ScrollViewer>

                </StackPanel>



            </Border>
        </Viewbox>
        

        <!--  Error Message  -->
        <TextBlock
            x:Name="ErrorMessageTextBlock"
            Margin="5"
            HorizontalAlignment="Center"
            FontSize="16"
            FontWeight="SemiBold"
            Foreground="Red"
            TextAlignment="Center"
            TextWrapping="WrapWithOverflow" />
    </Grid>
</Page>
