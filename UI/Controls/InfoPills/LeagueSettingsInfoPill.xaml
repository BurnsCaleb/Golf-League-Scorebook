<UserControl
    x:Class="UI.Controls.InfoPills.LeagueSettingsInfoPill"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Controls.InfoPills"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Button
        x:Name="LeagueSettingsButton"
        Click="LeagueSettingsButton_Click"
        Style="{StaticResource PillStyle}">
        <StackPanel>
            <StackPanel Name="InfoPanel" Orientation="Vertical">
                <!--  Setting Name  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="26"
                    FontWeight="Bold"
                    Foreground="{StaticResource Foreground}"
                    Text="{Binding SettingName}"
                    TextWrapping="WrapWithOverflow" />

                <!--  Scoring Rule  -->
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock
                        Margin="5"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Foreground}"
                        Text="Scoring Rule:" />
                    <TextBlock
                        Margin="5"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Foreground}"
                        Text="{Binding ScoringRule}" />
                </StackPanel>
            </StackPanel>

            <StackPanel x:Name="EditPanel" Visibility="Collapsed">
                <TextBlock Text="Edit" />
            </StackPanel>
        </StackPanel>
    </Button>
</UserControl>
