<Page
    x:Class="UI.Pages.Forms.CreateTeamPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Pages.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CreateTeamPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Header" Height="75" />
            <RowDefinition x:Name="InfoPanel" Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="15"
            FontSize="36"
            FontWeight="Bold"
            Foreground="{StaticResource Foreground}"
            Text="Create Team" />


        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="Select League" />
            <ComboBox
                x:Name="LeagueComboBox"
                Width="250"
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="20"
                ItemContainerStyle="{StaticResource DayComboBoxItemStyle}"
                SelectedIndex="0"
                SelectionChanged="LeagueComboBox_SelectionChanged"
                Style="{StaticResource DayComboBoxStyle}" />

            <StackPanel
                x:Name="ContentPanel"
                Margin="15"
                HorizontalAlignment="Center"
                Orientation="Vertical">

                <StackPanel
                    x:Name="GolferPanel"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal" />

                <!--  Error Message  -->
                <TextBlock
                    x:Name="ErrorMessageTextBlock"
                    Margin="5"
                    HorizontalAlignment="Center"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Foreground="Red"
                    TextAlignment="Center"
                    TextWrapping="WrapWithOverflow" />

                <Button
                    x:Name="SaveButton"
                    Margin="20,0"
                    HorizontalAlignment="Right"
                    Click="SaveButton_Click"
                    Content="Save"
                    Style="{StaticResource SaveExitButtonStyle}" />
            </StackPanel>
        </StackPanel>




    </Grid>
</Page>
