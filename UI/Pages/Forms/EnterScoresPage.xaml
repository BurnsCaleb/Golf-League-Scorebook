<Page
    x:Class="UI.Pages.Forms.EnterScoresPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Pages.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EnterScoresPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="{StaticResource Background}">
        <Grid.RowDefinitions>
            <RowDefinition
                x:Name="Header"
                MinHeight="225"
                MaxHeight="300" />
            <RowDefinition
                x:Name="ScoresRow"
                MinHeight="0"
                MaxHeight="90" />
            <RowDefinition
                x:Name="InfoRow"
                Height="*"
                MinHeight="400" />
        </Grid.RowDefinitions>

        <!--  Scorecard Tabs  -->
        <StackPanel
            Name="ScoreTabPanel"
            Grid.Row="0"
            Margin="15"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />

        <!--  Course Name  -->
        <StackPanel
            Grid.Row="0"
            Margin="15"
            HorizontalAlignment="Right"
            VerticalAlignment="Top">
            <TextBlock
                x:Name="CourseNameTextBlock"
                Width="600"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                FontSize="72"
                FontWeight="Bold"
                Foreground="{StaticResource Foreground}"
                TextAlignment="Right"
                TextWrapping="WrapWithOverflow" />
        </StackPanel>

        <!--  Other Golfer Scores  -->
        <StackPanel
            Name="ScoresPanel"
            Grid.Row="1"
            Margin="15"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Orientation="Horizontal" />


        <!--  Enter Score  -->
        <StackPanel
            Grid.Row="2"
            Margin="15"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <StackPanel
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal">
                <!--  Hole Info  -->
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Vertical">
                    <TextBlock
                        Margin="15"
                        FontSize="46"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Foreground}"
                        Text="{Binding HoleNameDisplay}" />

                    <TextBlock
                        Margin="15"
                        FontSize="36"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Foreground}"
                        Text="{Binding HoleDistanceDisplay}" />

                    <TextBlock
                        Margin="15"
                        FontSize="36"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Foreground}"
                        Text="{Binding HoleParDisplay}" />

                    <TextBlock
                        Margin="15"
                        FontSize="36"
                        FontWeight="SemiBold"
                        Foreground="{StaticResource Foreground}"
                        Text="{Binding HoleHandicapDisplay}" />
                </StackPanel>

                <StackPanel VerticalAlignment="Center" Orientation="Vertical">
                    <!--  Enter Score TextBox  -->
                    <TextBox
                        x:Name="ScoreTextBox"
                        Width="100"
                        Height="100"
                        Margin="15"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Background="{StaticResource Dark Gray}"
                        BorderBrush="{StaticResource Accent}"
                        BorderThickness="4"
                        FontSize="46"
                        FontWeight="Bold"
                        Foreground="{StaticResource Foreground}"
                        Text="{Binding HoleScoreDisplay, Mode=OneWay}"
                        TextChanged="ScoreTextBox_TextChanged" />

                    <Button
                        x:Name="TenPlusButton"
                        Margin="20,10"
                        HorizontalAlignment="Right"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        Click="TenPlusButton_Click"
                        Content="10+"
                        FontSize="24"
                        FontWeight="Bold"
                        Style="{StaticResource SaveExitButtonStyle}" />
                </StackPanel>

            </StackPanel>


            <TextBlock
                x:Name="ErrorMessageTextBlock"
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="Red"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow"
                Visibility="Collapsed" />

            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="PrevHoleButton"
                    Margin="20,10"
                    HorizontalAlignment="Right"
                    Click="PrevHoleButton_Click"
                    Content="Last Hole"
                    Style="{StaticResource SaveExitButtonStyle}"
                    Visibility="Hidden" />

                <Button
                    x:Name="NextHoleButton"
                    Margin="20,10"
                    HorizontalAlignment="Right"
                    Click="NextHoleButton_Click"
                    Content="Next Hole"
                    Style="{StaticResource SaveExitButtonStyle}" />




            </StackPanel>


        </StackPanel>





    </Grid>
</Page>
