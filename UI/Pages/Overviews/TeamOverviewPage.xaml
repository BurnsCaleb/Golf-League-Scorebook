<Page
    x:Class="UI.Pages.Overviews.TeamOverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Pages.Overviews"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TeamOverviewPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="PageHeader" Height="*" />
            <RowDefinition x:Name="Toolbar" Height="*" />
            <RowDefinition x:Name="ContentPanel" Height="4*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="15"
            VerticalAlignment="Center"
            FontFamily="Arial Black"
            FontSize="72"
            FontWeight="SemiBold"
            Foreground="{StaticResource Foreground}"
            Text="Teams" />


        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                Margin="5"
                VerticalAlignment="Center"
                FontSize="24"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="Sort by League :" />

            <ComboBox
                x:Name="LeagueFilterComboBox"
                Width="250"
                Margin="10"
                FontSize="20"
                ItemContainerStyle="{StaticResource DayComboBoxItemStyle}"
                SelectionChanged="LeagueFilterComboBox_SelectionChanged"
                Style="{StaticResource DayComboBoxStyle}" />
        </StackPanel>

        <WrapPanel
            x:Name="TeamPillPanel"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal" />
    </Grid>
</Page>
