<Page
    x:Class="UI.Pages.InfoPages.TeamInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Pages.InfoPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TeamInfoPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Header" Height="55" />
            <RowDefinition x:Name="Info" Height="auto" />
            <RowDefinition x:Name="Data" Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Left">
            <TextBlock
                x:Name="HeaderTextBlock"
                HorizontalAlignment="Right"
                FontSize="34"
                FontWeight="Bold"
                Foreground="{StaticResource Foreground}" />
        </StackPanel>

        <!--  Save and Delete Buttons  -->
        <StackPanel
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="DeleteButton"
                Margin="0,0,25,0"
                HorizontalAlignment="Right"
                Click="DeleteButton_Click"
                Content="Delete"
                Style="{StaticResource SaveExitButtonStyle}" />
        </StackPanel>


        <!--  Golfer Name Form  -->
        <StackPanel
            x:Name="GolferPanel"
            Grid.Row="1"
            HorizontalAlignment="Left"
            Orientation="Horizontal" />

        <!--  Round Data  -->
        <DataGrid
            Name="TeamRoundsDataGrid"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            AutoGenerateColumns="False"
            CellStyle="{StaticResource RoundsDataGridCellStyle}"
            ColumnHeaderStyle="{StaticResource RoundsDataGridColumnHeaderStyle}"
            RowStyle="{StaticResource RoundsDataGridRowStyle}"
            Style="{StaticResource RoundsDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding DatePlayed}" Header="Date Played" />
                <DataGridTextColumn Binding="{Binding MatchupName}" Header="Matchup" />
                <DataGridTextColumn Binding="{Binding PointsAwarded}" Header="Points" />
            </DataGrid.Columns>
        </DataGrid>

        <!--  Error Message  -->
        <TextBlock
            x:Name="ErrorMessageTextBlock"
            Margin="5"
            HorizontalAlignment="Center"
            FontSize="16"
            FontWeight="SemiBold"
            Foreground="Red"
            TextAlignment="Center"
            TextWrapping="WrapWithOverflow" />
    </Grid>
</Page>
