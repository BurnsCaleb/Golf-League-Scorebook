<UserControl
    x:Class="UI.Controls.InfoPills.TeamInfoPill"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Controls.InfoPills"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Button
        x:Name="TeamButton"
        Click="TeamButton_Click"
        Style="{StaticResource PillStyle}">
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <StackPanel Name="InfoPanel" Orientation="Vertical">
                <!--  Golfer Names  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="26"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource Foreground}"
                    Text="{Binding GolferNamesDisplay}"
                    TextWrapping="WrapWithOverflow" />

                <!--  League Name  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="22"
                    Foreground="{StaticResource Foreground}"
                    Text="{Binding LeagueName}" />
            </StackPanel>

            <StackPanel x:Name="EditPanel" Visibility="Collapsed">
                <TextBlock Text="Edit" />
            </StackPanel>

        </StackPanel>
    </Button>
</UserControl>
