<Page
    x:Class="UI.Pages.InfoPages.GolferInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Pages.InfoPages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="GolferInfoPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Header" Height="55" />
            <RowDefinition x:Name="Info" Height="100" />
            <RowDefinition x:Name="Data" Height="*" />
        </Grid.RowDefinitions>

        <!--  Header  -->
        <StackPanel
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Left">
            <TextBlock
                x:Name="HeaderTextBlock"
                HorizontalAlignment="Right"
                FontSize="34"
                FontWeight="Bold"
                Foreground="{StaticResource Foreground}"
                Text="View or Edit Golfer" />
        </StackPanel>

        <!--  Save and Delete Buttons  -->
        <StackPanel
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                x:Name="DeleteButton"
                Margin="0,0,25,0"
                HorizontalAlignment="Right"
                Click="DeleteButton_Click"
                Content="Delete"
                Style="{StaticResource SaveExitButtonStyle}" />
            <Button
                x:Name="SaveButton"
                Margin="0,0,25,0"
                HorizontalAlignment="Right"
                Click="SaveButton_Click"
                Content="Save"
                Style="{StaticResource SaveExitButtonStyle}"
                Visibility="Collapsed" />
        </StackPanel>


        <!--  Golfer Name and Handicap Form  -->
        <StackPanel Grid.Row="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBox
                    x:Name="GolferFirstNameTextBox"
                    Margin="5"
                    Background="{StaticResource Background}"
                    BorderThickness="0"
                    FontSize="34"
                    FontWeight="Bold"
                    Foreground="{StaticResource Foreground}"
                    Text="{Binding FirstName}"
                    TextChanged="GolferForm_Changed" />
                <TextBox
                    x:Name="GolferLastNameTextBox"
                    Margin="5"
                    Background="{StaticResource Background}"
                    BorderThickness="0"
                    FontSize="34"
                    FontWeight="Bold"
                    Foreground="{StaticResource Foreground}"
                    Text="{Binding LastName}"
                    TextChanged="GolferForm_Changed" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock
                    x:Name="HandicapLabelTextBlock"
                    Margin="5"
                    FontSize="26"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource Foreground}"
                    Text="Handicap:" />

                <TextBox
                    x:Name="GolferHandicapTextBox"
                    Margin="5"
                    Background="{StaticResource Background}"
                    BorderThickness="0"
                    FontSize="26"
                    FontWeight="SemiBold"
                    Foreground="{StaticResource Foreground}"
                    Text="{Binding Handicap}"
                    TextChanged="GolferForm_Changed" />
            </StackPanel>
        </StackPanel>

        <!--  Round Data  -->
        <DataGrid
            Name="GolferRoundsDataGrid"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            AutoGenerateColumns="False"
            CellStyle="{StaticResource RoundsDataGridCellStyle}"
            ColumnHeaderStyle="{StaticResource RoundsDataGridColumnHeaderStyle}"
            RowStyle="{StaticResource RoundsDataGridRowStyle}"
            Style="{StaticResource RoundsDataGridStyle}">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding DatePlayed, Mode=OneWay}" Header="Date Played" />
                <DataGridTextColumn Binding="{Binding League, Mode=OneWay}" Header="League" />
                <DataGridTextColumn Binding="{Binding Matchup, Mode=OneWay}" Header="Matchup" />
                <DataGridTextColumn Binding="{Binding GrossScore, Mode=OneWay}" Header="Gross" />
                <DataGridTextColumn Binding="{Binding NetScore, Mode=OneWay}" Header="Net" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock
            x:Name="ErrorMessageTextBlock"
            Margin="5"
            HorizontalAlignment="Center"
            FontSize="16"
            FontWeight="SemiBold"
            Foreground="Red"
            TextAlignment="Center"
            TextWrapping="WrapWithOverflow" />
    </Grid>
</Page>
