<Page
    x:Class="UI.Pages.Forms.CreateLeaguePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Pages.Forms"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CreateLeaguePage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{StaticResource Background}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="Header" Height="80" />
            <RowDefinition Name="LeagueInfo" Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="15"
            HorizontalAlignment="Left"
            FontSize="36"
            FontWeight="Bold"
            Foreground="{StaticResource Foreground}"
            Text="Create a League" />

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            Orientation="Vertical">

            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="League Name" />

            <Border
                Width="350"
                Height="50"
                Margin="15,0"
                BorderBrush="{StaticResource Dark Gray}"
                BorderThickness="2"
                CornerRadius="5">
                <TextBox
                    x:Name="LeagueNameTextBox"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Background="{StaticResource Background}"
                    BorderThickness="0"
                    FontSize="18"
                    Foreground="{StaticResource Foreground}" />
            </Border>

            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="League Settings" />

            <ComboBox
                x:Name="SettingsComboBox"
                Width="350"
                Margin="5"
                FontSize="20"
                ItemContainerStyle="{StaticResource DayComboBoxItemStyle}"
                Style="{StaticResource DayComboBoxStyle}" />

            <TextBlock
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="SemiBold"
                Foreground="{StaticResource Foreground}"
                Text="Course" />

            <ComboBox
                x:Name="CourseComboBox"
                Width="350"
                Margin="5"
                FontSize="20"
                ItemContainerStyle="{StaticResource DayComboBoxItemStyle}"
                Style="{StaticResource DayComboBoxStyle}" />




            <TextBlock
                x:Name="ErrorMessageTextBlock"
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="Red"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow" />

            <!--  Save Button  -->
            <Button
                x:Name="SaveButton"
                Margin="20,0"
                HorizontalAlignment="Right"
                Click="SaveButton_Click"
                Content="Save"
                Style="{StaticResource SaveExitButtonStyle}" />
        </StackPanel>
    </Grid>
</Page>
