<UserControl
    x:Class="UI.Controls.InfoPills.CourseInfoPill"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Controls.InfoPills"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Button
        x:Name="CourseButton"
        Click="CourseButton_Click"
        Style="{StaticResource PillStyle}">
        <StackPanel>
            <StackPanel Name="InfoPanel">
                <!--  Course Name  -->
                <TextBlock
                    Margin="0,0,0,5"
                    FontSize="18"
                    FontWeight="Bold"
                    Foreground="{StaticResource Foreground}"
                    Text="{Binding CourseName}" />

                <!--  Course Location  -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="14"
                        Foreground="{StaticResource Accent}"
                        Text="&#xE909;" />

                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="{StaticResource Foreground}"
                        Text="{Binding CourseLocation}" />
                </StackPanel>

                <!--  Number of Holes  -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="14"
                        Foreground="{StaticResource Accent}"
                        Text="&#xE7C1;" />

                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="{StaticResource Foreground}"
                        Text="{Binding CourseHoles}" />
                </StackPanel>

                <!--  Course Par  -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,5,0"
                        VerticalAlignment="Center"
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="14"
                        Foreground="{StaticResource Accent}"
                        Text="&#xE208;" />

                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="14"
                        Foreground="{StaticResource Foreground}"
                        Text="{Binding CoursePar}" />
                </StackPanel>
            </StackPanel>

            <StackPanel x:Name="EditPanel" Visibility="Collapsed">
                <TextBlock Text="Edit" />
            </StackPanel>
        </StackPanel>
    </Button>
</UserControl>
