<UserControl
    x:Class="UI.Controls.InfoPills.LeagueInfoPill"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Controls.InfoPills"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="15"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Button
        x:Name="GolferButton"
        Click="GolferButton_Click"
        Style="{StaticResource LeaguePillStyle}">
        <StackPanel HorizontalAlignment="Left">

            <!--  League Name  -->
            <TextBlock
                Margin="0,0,0,5"
                FontSize="18"
                FontWeight="Bold"
                Foreground="{StaticResource Foreground}"
                Text="{Binding LeagueName}" />

            <!--  Course Name  -->
            <StackPanel
                Margin="0,0,0,5"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="14"
                    Foreground="{StaticResource Accent}"
                    Text="&#xE909;" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="{StaticResource Foreground}"
                    Text="{Binding CourseName}" />
            </StackPanel>

            <!--  Player Count  -->
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    Margin="0,0,5,0"
                    VerticalAlignment="Center"
                    FontFamily="Segoe MDL2 Assets"
                    FontSize="14"
                    Foreground="{StaticResource Accent}"
                    Text="&#xE716;" />
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="14"
                    Foreground="{StaticResource Foreground}"
                    Text="{Binding NumTeams}" />
            </StackPanel>

        </StackPanel>
    </Button>
</UserControl>
