<UserControl
    x:Class="UI.Controls.ScorecardTab"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Hole1" Height="1*" />
            <RowDefinition x:Name="Hole2" Height="1*" />
            <RowDefinition x:Name="Hole3" Height="1*" />
            <RowDefinition x:Name="ListBoxRow" Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="GolferName" Width="2*" />
            <ColumnDefinition x:Name="Scores" Width="1*" />
        </Grid.ColumnDefinitions>

        <!--  Golfer Name  -->
        <TextBlock
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Margin="15"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="56"
            FontWeight="Bold"
            Foreground="{StaticResource Foreground}"
            Text="{Binding GolferName}"
            TextAlignment="Center" />

        <!--  Substitute Button  -->
        <Button
            Name="SubstitutionButton"
            Grid.Row="2"
            Grid.Column="0"
            Width="300"
            Height="auto"
            Margin="15"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="SubstitutionButton_Click"
            Content="Substitution"
            FontSize="28"
            FontWeight="SemiBold"
            Style="{StaticResource CreateNewLeagueButtonStyle}"
            Visibility="Collapsed" />

        <Button
            Name="RemoveSubButton"
            Grid.Row="2"
            Grid.Column="0"
            Width="auto"
            Margin="15"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="RemoveSubButton_Click"
            Content="Remove Sub"
            FontSize="28"
            FontWeight="SemiBold"
            Style="{StaticResource CreateNewLeagueButtonStyle}"
            Visibility="Collapsed" />

        <!--  Top Hole  -->
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">

            <TextBlock
                VerticalAlignment="Center"
                FontSize="28"
                Foreground="{StaticResource Foreground}"
                Text="{Binding TopHoleNum}" />

            <TextBlock
                Margin="15,0"
                VerticalAlignment="Center"
                FontSize="28"
                Foreground="{StaticResource Foreground}"
                Text="{Binding TopHoleScore}" />

        </StackPanel>


        <!--  Middle Hole  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="1"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="28"
                Foreground="{StaticResource Foreground}"
                Text="{Binding MiddleHoleNum}" />

            <TextBlock
                Margin="15,0"
                VerticalAlignment="Center"
                FontSize="28"
                Foreground="{StaticResource Foreground}"
                Text="{Binding MiddleHoleScore}" />
        </StackPanel>


        <!--  Bottom Hole  -->
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="28"
                Foreground="{StaticResource Foreground}"
                Text="{Binding BottomHoleNum}" />

            <TextBlock
                Margin="15,0"
                VerticalAlignment="Center"
                FontSize="28"
                Foreground="{StaticResource Foreground}"
                Text="{Binding BottomHoleScore}" />
        </StackPanel>

    </Grid>
</UserControl>
