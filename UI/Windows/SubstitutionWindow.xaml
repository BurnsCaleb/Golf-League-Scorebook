<Window
    x:Class="UI.Windows.SubstitutionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Select a Substitute"
    Width="600"
    Height="500"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowStyle="SingleBorderWindow"
    mc:Ignorable="d">
    <Grid Background="{StaticResource Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="20"
            HorizontalAlignment="Center"
            Orientation="Vertical">

            <!--  Title  -->
            <TextBlock
                FontSize="48"
                FontWeight="Bold"
                Foreground="{StaticResource Foreground}"
                Text="Select a Substitute" />

            <StackPanel
                x:Name="GolferPanel"
                Margin="20"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Orientation="Horizontal" />

            <!--  Error Message  -->
            <TextBlock
                x:Name="ErrorMessageTextBlock"
                Margin="5"
                HorizontalAlignment="Center"
                FontSize="16"
                FontWeight="SemiBold"
                Foreground="Red"
                TextAlignment="Center"
                TextWrapping="WrapWithOverflow" />
        </StackPanel>



        <StackPanel
            Grid.Row="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">

            <Button
                x:Name="CancelButton"
                Margin="20,10"
                HorizontalAlignment="Right"
                Click="CancelButton_Click"
                Content="Cancel"
                Style="{StaticResource SaveExitButtonStyle}" />

            <Button
                x:Name="AddSubButton"
                Margin="20,10"
                HorizontalAlignment="Right"
                Click="AddSubButton_Click"
                Content="Add Sub"
                Style="{StaticResource SaveExitButtonStyle}" />


        </StackPanel>
    </Grid>
</Window>
