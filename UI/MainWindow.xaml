<Window
    x:Class="UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Golf League Scorebook"
    Width="1920"
    Height="1080"
    Background="{StaticResource Background}"
    ResizeMode="CanResize"
    WindowState="Maximized"
    WindowStyle="SingleBorderWindow"
    Icon="/Resources/Assets/Images/Golf_League_Scorebook_Logo.ico"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <controls:NavigationBar
            x:Name="NavigationBar"
            Grid.Column="0"
            CoursesClicked="NavigationBar_CoursesClicked"
            HomeClicked="NavigationBar_HomeClicked"
            LeaguesClicked="NavigationBar_LeaguesClicked"
            PlayersClicked="NavigationBar_PlayersClicked"
            SettingsClicked="NavigationBar_SettingsClicked"
            TeamsClicked="NavigationBar_TeamsClicked" />

        <Border
            Grid.Column="1"
            Padding="20"
            Background="{StaticResource Background}">
            <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" />
        </Border>

    </Grid>
</Window>
